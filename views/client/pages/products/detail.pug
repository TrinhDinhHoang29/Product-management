extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../../admin/mixins/messages-success.pug
block main
    +messages-success(5000)
    .container.my-3 
        .row 
            .col-12
                +box-head("Chi tiết sản phẩm")
        .row.my-3 
            .col-6 
                .product-head-1.border.m-3.p-3
                    .product-img
                        img(src=product.thumbnail, alt="" width="80%" height="80%")
            .col-6 
                .product-head-2.m-3.p-3
                    .card 
                        h2.card-header.text-center Thông tin sản phẩm
                        .card-body 
                            h3.card-text.my-3 #{product.title}
                            .card-text.my-3 Gía sản phẩm: #{product.price} VNĐ  
                            
                            - if (product.featured==true)
                                .card-text.my-3 Trạng thái: 
                                    span.badge.bg-success Đang hoạt động
                            .card-text 
                                form(action=`/cart/add/${product._id}`, method="post" class="form my-3") 
                                    input(type="number" name="quantity" class="form-control my-1" min="1" max=product.stock value="1")
                                    input(type="submit" class="form-control btn btn-danger" value="Add to card")
        .row.my-3 
            .col-12 !{product.description}

                                    
                         

                            



