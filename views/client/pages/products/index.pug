extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
    .container.my-3 
        .row 
            .col-12
                +box-head("Danh sách sản phẩm")
    .container
        .row 
            each item in products 
                .col-4.mb-3
                    .product-item.py-3.px-3.border
                        .inner-image
                            a(href="")
                                img(src=item.thumbnail, alt="")  
                        .inner-content 
                            h4.inner-title DiorSauvageEDP
                            .inner-price-new #{item.price} $
                            .inner-price-old 100$
                            .inner-status #{item.description}
                            .inner-add-cart.text-center
                                button.btn.btn-success.btn-add Thêm vào giỏ
                    