extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/interface-products.pug
include ../../../admin/mixins/messages-success.pug

block main
    +messages-success(5000)
    .container.my-3 
        .row 
            .col-12.text-success
                +box-head("Đặt hàng thành công")
        .container 
            h4 Thông tin khách hàng 
        .container 
            .container
            table(class="table table-striped my-3 text-center")
                thead.table-dark  
                    tr 
                        th Họ và tên
                        th Số điện thoại
                        th Địa chỉ
                tbody 
                    tr 
                        td #{order.userInfo.fullName}
                        td #{order.userInfo.phone}
                        td #{order.userInfo.address}
        .container 
            h4 Thông tin đơn hàng 
        .container
            table(class="table table-striped my-3 text-center")
                thead.table-dark  
                    tr 
                        th STT
                        th Hình ảnh
                        th Tên sản phẩm
                        th Gía
                        th Số lượng
                        th Tổng tiền 
                tbody 
                    each item,index in order.products
                        tr 
                            td #{index}
                            td 
                                img(src=item.thumbnail, alt="" width="100px")
                            td 
                                a(href=`/products/detail/${item.slug}`) #{item.title} 
                            td #{item.price}
                            td #{item.quantity}
                            td #{item.price*item.quantity} VND
