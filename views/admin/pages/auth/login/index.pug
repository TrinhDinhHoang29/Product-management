extends ../../../layouts/auth 
include ../../../mixins/messages-success


block main
    +messages-success(5000)
    +messages-error(5000)
    form(action="/admin/auth/login" method="POST" class="form-group col-5 border py-3 px-3")
        h2.text-center.my-3 Đăng nhập
        label(for="" class="form-group my-1") Tài khoản: 
        input(type="text" name="userName" class="form-control" required placeholder="Nhập tài khoản....") 
        label(for="" class="form-group my-1") email: 
        input(type="text" name="email" class="form-control" required placeholder="Nhập email....") 
        label(for="" class="form-group my-1") Mật khẩu:  
        input(type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu....")
        .text-center
            input(type="submit" value="Đăng nhập" class="btn btn-primary my-3 form-control")