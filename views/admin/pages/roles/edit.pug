extends ../../layouts/default 
include ../../mixins/messages-success
block main 
    .col-9 
        +messages-success("5000")
        +messages-success("5000")
        .my-3.card 
            .card-header
                h1 Chỉnh sửa phân quyền
            .card-body 
                form(class="form-group" method="POST" action=`/admin/roles/edit/${records.id}?_method=PATCH`)
                    .mb-3 
                        label(class="form-label") Title
                        input(type="text" name="title" value=records.title class="form-control")
                    .mb-3 
                        label(class="form-label") Description
                        input(type="text" name="description" value=records.description class="form-control")
                    .mb-3.text-center 
                        input(type="submit" class="btn btn-primary" value="Thêm danh muc")                      